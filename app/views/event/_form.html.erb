<%= form_for :event, html: { 'novalidate' => true }, url: event_index_path do |f| %>
  <%= f.hidden_field :lat, :required => true, :"data-silent" => "" %>
  <%= f.hidden_field :long, :required => true, :"data-silent" => "" %>
  <p>
    <%= f.label :title %>
    <%= f.text_field :title, :required => true, :"data-required-message" => "Please enter a name of your party" %>
  </p>
  <p>
  	<%= f.label :community %>
  	<%= f.text_field :community %>
  </p>
  <p>
  	<%= f.label :address %>
  	<%= f.text_field :address, :required => true, :"data-required-message" => "Please enter an address" %>
  </p>
  <p>
  	<%= f.label :organizer %>
  	<%= f.text_field :organizer %>
  </p>
  <p>
  	<%= f.label :date %>
  	<%= f.text_field :date, :required => true, :"data-match" => "date", :"data-required-message" => "Please enter party date" %>
  </p>
  <p>
  	<%= f.label :start_time %>
  	<%= f.text_field :start_time, :required => true, :"data-match" => "time", :"data-required-message" => "Please enter a start time" %>
  </p>
  <p>
  	<%= f.label :end_time %>
  	<%= f.text_field :end_time, :required => true, :"data-match" => "time", :"data-required-message" => "Please enter a start time" %>
  </p>
  <p>
  	<%= f.submit :class => "button" %>
  </p>
<% end %>
